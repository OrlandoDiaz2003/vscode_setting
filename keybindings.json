[
  //Explorador de archivos (,e)
  {
    "key": ", e",
    "command": "workbench.view.explorer",
    "when": "activeViewlet != 'workbench.view.explorer' && vim.mode == 'Normal'"
  },
  {
    "key": ", e",
    "command": "workbench.action.closeSidebar",
    "when": "activeViewlet == 'workbench.view.explorer' && vim.mode == 'Normal'"
  },

  // Buscar (,f)
  {
    "key": ", f",
    "command": "workbench.view.search",
    "when": "activeViewlet != 'workbench.view.search' && vim.mode == 'Normal'"
  },
  {
    "key": ", f",
    "command": "workbench.action.closeSidebar",
    "when": "activeViewlet == 'workbench.view.search' && vim.mode == 'Normal'"
  },

  //Extensiones (,x)
  {
    "key": ", x",
    "command": "workbench.view.extensions",
    "when": "activeViewlet != 'workbench.view.extensions' && vim.mode == 'Normal'"
  },
  {
    "key": ", x",
    "command": "workbench.action.closeSidebar",
    "when": "activeViewlet == 'workbench.view.extensions' && vim.mode == 'Normal'"
  },

  // Git / Control de código fuente (,g)
  {
    "key": ", g",
    "command": "workbench.view.scm",
    "when": "activeViewlet != 'workbench.view.scm' && vim.mode == 'Normal'"
  },
  {
    "key": ", g",
    "command": "workbench.action.closeSidebar",
    "when": "activeViewlet == 'workbench.view.scm' && vim.mode == 'Normal'"
  },

  //Terminal integrada (,j)
  {
    "key": ", j",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "vim.mode == 'Normal'"
  },

  //Búsqueda rápida de archivos (,P)
  {
    "key": ", P",
    "command": "workbench.action.quickOpen",
    "when": "vim.mode == 'Normal'"
  },

  //ir a las advertencia
  {
    "key": ", [",
    "command": "editor.action.marker.prev",
    "when": "vim.mode == 'Normal'"
  },

  {
    "key": ", ]",
    "command": "editor.action.marker.next",
    "when": "vim.mode == 'Normal'"
  },
  //abrir archivo
  {
    "key": ", o",
    "command": "workbench.action.files.openFile",
    "when": "vim.mode == 'Normal'"
  },

  //abrir una carpeta
  {
    "key": ", k",
    "command": "workbench.action.files.openFileFolder",
    "when": "vim.mode == 'Normal'"
  },

  //Chat de GitHub Copilot (,b)
  {
    "key": ", b",
    "command": "workbench.action.chat.openAsk",
    "when": "chatVisible != true && vim.mode == 'Normal'"
  },
  {
    "key": ", b",
    "command": "workbench.action.closeAuxiliaryBar",
    "when": "auxiliaryBarFocus == true && vim.mode == 'Normal'"
  },

  //Cerrar ventanas
  {
    "key": ", w",
    "command": "workbench.action.closeEditorsInGroup",
    "when": "vim.mode == 'Normal'"
  },

  //ver code suggestion
  {
    "key": ", c",
    "command": "editor.action.triggerSuggest",
    "when": "vim.mode == 'Normal'"
  },

  //quick fix
  {
    "key": ", q",
    "command": "editor.action.quickFix",
    "when": "vim.mode == 'Normal'"
  },

  //mostrar doc de funcion
  {
    "key": ", a",
    "command": "editor.action.showHover",
    "when": "vim.mode == 'Normal'"
  },
  
  //moverse entre paneles
  {
    "key":"ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key":"ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },

  //agrandar paneles y chicar
  {
    "key":"ctrl+k",
    "command":  "workbench.action.increaseViewSize",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.decreaseViewSize",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
 //enfocar en distintos paneles 
  {
    "key": ", 1",
    "command": "workbench.action.focusFirstEditorGroup",
    "when": "vim.mode == 'Normal'"
  },
  {
    "key": ", 2",
    "command": "workbench.action.focusSecondEditorGroup",
    "when": "vim.mode == 'Normal'"
  },

]